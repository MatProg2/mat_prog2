import static java.lang.System.*;
import java.util.Scanner;

public class pe4
{
  public static void main (String [] args)
  {
    String palavra;
    
    for (int i=0; i<args.length; i++)
    {
      palavra = args[i];
      inverte(palavra);
      imprimir(palavra);
    }
    
    
  }
  public static String inverte(String palavra)
  {  
    String inv;
    char troca[] = new char[palavra.length];
    
    if(palavra.length==1 || palavra.length==0)
    {
      return palavra;
    }
    else
    {
      inv=palavra.charAt(palavra.length);
      return inv;
    }
  }
  
  public static void imprimir(String palavra)
  {
    out.println(palavra+" -> "+ invert());
  }
  
  public static char[] StringtoArray(String s) // = a toCharArray()
  {
    char[] c = new char[s.length()];
    for(int i=0; i<s.length; i++)
    {
      c[i]=s.charAt(i);
    }
    return c;
  }
}
